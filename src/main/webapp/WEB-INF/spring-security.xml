<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.0.3.xsd">

    <http auto-config="true" >
        <intercept-url pattern="/DG/**" access="ROLE_ADMIN" />
        <intercept-url pattern="/CAISSIER/**" access="ROLE_CAISSIER" />
        <form-login login-page="/login" default-target-url="/welcome"
                    authentication-failure-url="/loginfailed" />
        <logout logout-success-url="/logout" 
                invalidate-session="true"
        />
        
        <!--                 delete-cookies="JSESSIONID"-->
    </http>

    <authentication-manager>
        <authentication-provider>
            <jdbc-user-service data-source-ref="dataSource"
                               users-by-username-query="
					select username,password, etatCompte
					from Personnel where username=?" 
				
                               authorities-by-username-query="
					select p.username, r.autoriÃ© from Personnel p, UserRole r 
					where r.personnel_id= p.id and p.username =?  " 
					
            />
        </authentication-provider>
    </authentication-manager>

</beans:beans>